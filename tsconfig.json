{
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"moduleResolution": "node",
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strict": true,
		"target": "es2016",
		"types": [ "intern" ]
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	],
	"exclude": [
		"./src/templates"
	]
}
